<resources>
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item><!-- action bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item><!-- status bar -->
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.FullScreen">   //สืบทอดจาก style name="AppTheme" หลัก เพิ่มจุด กำหนดบางอย่างเพิ่ม code ปิดทั้ง แอพบาร์ และตัววันที่(สเตตัสบาร์)
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.NoActionBar"> //สืบทอดจาก style name="AppTheme" code ปิดเฉพาะ แอพบาร์
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>
